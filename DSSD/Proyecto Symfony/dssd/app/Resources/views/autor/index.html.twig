{% extends 'base.html.twig' %}

{% block body %}
    <h1>Autor list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autor in autors %}
            <tr>
                <td><a href="{{ path('autor_show', { 'id': autor.id }) }}">{{ autor.id }}</a></td>
                <td>{{ autor.nombre }}</td>
                <td>{{ autor.apellido }}</td>
                <td>{{ autor.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('autor_show', { 'id': autor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('autor_edit', { 'id': autor.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('autor_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
