<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="JRuteros">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		 <class>model.Actividad</class>
		 <class>model.Usuario</class>
		 <class>model.Ruta</class>
		 <class>model.Punto</class>
		 <class>model.Imagen</class>
		 <properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.username" value="nico" />
			<property name="hibernate.connection.password" value="nico"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/JRuteros"/>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
		 </properties>
	</persistence-unit>
</persistence>